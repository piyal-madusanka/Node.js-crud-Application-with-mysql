<div class="container" style="background-origin: padding-box;">
  
  <% if(item.length>0){   %>
     
<form action="/updateusernow" method="POST">
  <%item.forEach((item,index)=>{ %>  
    <div class="form-group">
      <label for="email">User name:</label>
      <input name="name" type="text" class="form-control" value="<%= item.username%>"  >
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" name="pwd"  class="form-control" value="<%= item.password%>"   >
    </div>
    <div class="form-group">
      
      <input type="hidden" name="id"  class="form-control" value="<%= item.id%>"   >
    </div>
    <%   }); %>  
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <% }else{%>
    <p>No record found</p>

    <%}%>
</div>


